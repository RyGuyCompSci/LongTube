{
  "manifest_version": 2,
  "name": "LongTube",
  "version": "1.0",
  "description": "Hides YouTube Shorts-related content to improve productivity.",
  "icons": {
    "48": "icons/longtube-48.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}